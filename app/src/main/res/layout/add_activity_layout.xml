<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/eventTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/primaryDarkColor"
        android:textSize="25sp"
        android:inputType="textCapWords"
        android:hint="@string/event_name"/>

    <TextView
        android:id="@+id/startTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventTitleText"
        android:layout_alignStart="@id/eventTitleText"
        android:text="@string/start_time"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/endTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/eventTitleText"
        android:layout_below="@id/startTimeText"
        android:layout_marginTop="24dp"
        android:text="@string/end_time"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/startTimeMinutes"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/eventTitleText"
        android:layout_alignBaseline="@id/startTimeText"
        android:theme="@style/mySpinnerItemStyle"
        android:ems="10"
        android:entries="@array/minutes"/>

    <Spinner
        android:id="@+id/startTimeHour"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/startTimeMinutes"
        android:layout_alignBaseline="@id/startTimeText"
        android:theme="@style/mySpinnerItemStyle"
        android:ems="10"
        android:entries="@array/hours"/>

    <Spinner
        android:id="@+id/endTimeMinutes"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/eventTitleText"
        android:layout_alignBaseline="@id/endTimeText"
        android:theme="@style/mySpinnerItemStyle"
        android:ems="10"
        android:entries="@array/minutes"/>

    <Spinner
        android:id="@+id/endTimeHour"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/endTimeMinutes"
        android:layout_alignBaseline="@id/endTimeText"
        android:theme="@style/mySpinnerItemStyle"
        android:ems="10"
        android:entries="@array/hours"/>

    <EditText
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/endTimeText"
        android:layout_alignStart="@id/eventTitleText"
        android:layout_alignEnd="@id/eventTitleText"
        android:layout_marginTop="24dp"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="@string/note_prompt"/>

</android.widget.RelativeLayout>