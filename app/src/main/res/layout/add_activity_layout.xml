<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/eventTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/primaryDarkColor"
        android:textSize="25sp"
        android:hint="Event name"/>

    <TextView
        android:id="@+id/startTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventTitleText"
        android:layout_alignStart="@id/eventTitleText"
        android:text="Start Time:"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/endTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/eventTitleText"
        android:layout_below="@id/startTimeText"
        android:layout_marginTop="24dp"
        android:layout_alignBaseline="@id/endTime"
        android:text="End Time:"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/startTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@id/eventTitleText"
        android:layout_alignBaseline="@id/startTimeText"
        android:ems="10"
        android:inputType="time"
        android:textColor="@color/primaryDarkColor"/>

    <EditText
        android:id="@+id/endTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/eventTitleText"
        android:layout_below="@id/startTime"
        android:ems="10"
        android:inputType="time"
        android:textColor="@color/primaryDarkColor"/>

    <EditText
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/endTimeText"
        android:layout_alignStart="@id/eventTitleText"
        android:layout_alignEnd="@id/eventTitleText"
        android:layout_marginTop="24dp"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="Note (optional)"/>

</android.widget.RelativeLayout>